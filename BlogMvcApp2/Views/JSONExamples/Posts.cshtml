@model IEnumerable<BlogMvcApp2.Models.Post>
@{
    ViewBag.Title = "Posts";
}

<h2>Posts</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th> Sıra No</th>
            <th> Detay </th>
            <th scope="col"> User Id</th>
            <th scope="col">Id</th> 
            <th scope="col">Title</th>
            <th scope="col">Body</th>
        </tr>
    </thead>
    <tbody>


        @{int sayi = 0; }

        @foreach (var item in Model)
        {

        <tr>
            <td> @sayi </td>

            <td> @Html.ActionLink(" Detay", "Update", "JSONExamples", new { id = item.id }, null )</td>
            <td> @item.userId </td>
            <td>@item.id</td>
            <td>@item.title</td>
            <td>@item.body</td>
        </tr>
            sayi++;
        }
            

    </tbody>

</table>
